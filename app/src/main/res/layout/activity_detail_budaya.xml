<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DetailBudayaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarBdy"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/azedo"
                    android:text="Indonesia"
                    android:textColor="#CC3636"
                    android:textSize="50dp"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/azedo"
                    android:text="Qu"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBdy"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/jaipong"/>

                <TextView
                    android:id="@+id/jdl"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Budaya"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/detail"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Budaya"
                    android:layout_marginLeft="7dp"
                    android:textColor="#464343"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hisasan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sejarah"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/detSejarah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Sejarah"
                    android:textColor="#464343"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="7dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hisasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asal Usul"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/asalusul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Asal Usul"
                    android:textColor="#464343"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="7dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>